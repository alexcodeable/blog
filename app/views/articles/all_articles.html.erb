<div class="sb-nav-fixed">
    <%= render "shared/admin_t_nav" %>
    <div id="layoutSidenav">
        <%= render "shared/admin_s_nav" %>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Articles</h1>
                     <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">All Articles</li>
                    </ol>
                    <div class="row">
                         <div class="card border-0 shadow mb-4">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="datatablesSimple" class="table table-centered table-nowrap mb-0 rounded">
                                        <thead class="thead-light">
                                            <tr>
                                                <th class="border-0 rounded-start">image</th>
                                                <th class="border-0">post title</th>
                                                <th class="border-0">Post Description</th>
                                                <th class="border-0">Date</th>
                                                <th class="border-0">Status</th>
                                                <th class="border-0">Author</th>
                                                <th class="border-0 rounded-end" >Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                        <% @articles.each do |article| %>
                                            <!-- Item -->
                                            <tr>
                                                <td class="fw-bold d-flex align-items-center">
                                                <span  class="avatar">
                                                    <img class="rounded img-fluid" width="35" alt="Image placeholder" src="https://github.com/mdo.png">
                                                </span>
                                                </td>
                                                <td>
                                                    <%= truncate(article.title, length: 30) %>
                                                </td>
                                                
                                                <td>
                                                    <%= truncate(article.description, length: 40) %>
                                                </td>
                                                <td>
                                                <%= article.created_at.to_date %>
                                                </td>

                                                <td>
                                                Published
                                                </td>
                                                <td>
                                                <%= article.user.first_name%>
                                                </td>
                                                
                                                <td>
                                                <%= link_to  article  do %>
                                                <i class="bi bi-eye fs-5 text-info"></i>
                                                <% end %>
                                            
                                                <%= link_to edit_article_path(article) do %>
                                                <i class="bi bi-vector-pen fs-5 ps-1 pe-1 text-success"></i>
                                                <% end %>
                                                
                                                <%= link_to article, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } do %>
                                                <i class="bi bi-trash fs-5 text-danger"></i>
                                                <% end %>
                                                </td>
                                                        
                                            
                                            </tr>                                
                                            <!-- End of Item -->
                                        <% end %>
                                        </tbody>
                                    </table>
                                </div>
                        </div> 

                    </div>
                </div>
            </main>
            <%= render "shared/footer" %>
        </div>
    </div>
    
</div>

