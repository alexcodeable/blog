
<div class="sb-nav-fixed">
    <%= render "shared/admin_t_nav" %>
    <div id="layoutSidenav">
        <%= render "shared/admin_s_nav" %>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Accout Update</h1>
                    <ol class="breadcrumb mb-4">
                          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                          <li class="breadcrumb-item active">Account Update</li>
                        </ol>
                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    
                          <div class="row g-5 mb-5">
     

                            <div class="col-md-7 col-lg-8">
                              <form class="needs-validation" novalidate="">
                                <div class="row g-3">
                                  <div class="col-sm-6">
                                    <label for="firstName" class="form-label">First name</label>
                                    <%= f.text_field :first_name, autocomplete: "First Name", class: "form-control", id: "firstName"  %>
                                    <div class="invalid-feedback">
                                      Valid first name is required.
                                    </div>
                                  </div>

                                  <div class="col-sm-6">
                                    <label for="lastName" class="form-label">Last name</label>
                                    <%= f.text_field :last_name, autocomplete: "Last Name", class: "form-control", id: "lastName" %>
                                    <div class="invalid-feedback">
                                      Valid last name is required.
                                    </div>
                                  </div>

                                  <div class="col-12">
                                    <label for="username" class="form-label">Username</label>
                                    <div class="input-group has-validation">
                                      <span class="input-group-text">@</span>
                                      <%= f.text_field :username, autocomplete: "Username", class: "form-control", id: "username" %>
                                    <div class="invalid-feedback">
                                        Your username is required.
                                      </div>
                                    </div>
                                  </div>

                                  <div class="col-12">
                                    <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                                    <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "email" %>
                                    <div class="invalid-feedback">
                                      Please enter a valid email address for shipping updates.
                                    </div>
                                  </div>

                                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                                  <% end %>




                                    <div class="card pt-3 pb-3 mt-5 mb-4 bg-light">
                                    <h4 class="fw-bold">Change Password</h4>
                                      <div class="col-12">
                                        <label for="address" class="form-label">Password <i class="text-primary">(leave blank if you don't want to change it)</i></label>
                                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2", id: "address", placeholder: "New Password" %>
                                      <% if @minimum_password_length %>
                                        <em><%= @minimum_password_length %> characters minimum</em>
                                      <% end %>
                                        <div class="invalid-feedback">
                                          Please enter a Strong Password
                                        </div>
                                      </div>

                                      <div class="col-12">
                                        <label for="address2" class="form-label">Confirm Password </label>
                                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "address2", placeholder: "Confirm Password" %>
                                      </div>
                                    </div>

                                   <div class="col-12">
                                    <label for="address2" class="form-label">Current Password <i class="text-success">(we need your current password to confirm your changes)</i></label>
                                  <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", id: "address3", placeholder: "Current Password" %>
                                  </div>


                                  <%= f.submit "Update", class: "w-100 btn btn-primary btn-lg mt-3 mb-5" %>
                              </form>
                            </div>
                          </div>


                    <div class="row">
                        <div class="col-xl-12">
                            
                              <% end %>
                            <div class="card mb-4">

                            <h3 class="mt-3 fw-bold">Cancel my account</h3>

                              <p class="text-danger">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %></p>

                           </div>
                        </div>
                        
                    </div>
                </div>
            </main>
            <%= render "shared/footer" %>
        </div>
    </div>
    
</div>










